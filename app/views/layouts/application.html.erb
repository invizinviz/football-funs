<!DOCTYPE html>
<html>
<head>
  <title>FootballFansApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag "jquery.twitter.autolink.js" %>
  <%= javascript_include_tag 'http://localhost:9292/faye/faye.js'%>
  <%= csrf_meta_tags %>
</head>
<body data-channel="<%= @team.try(:twitter) || 'premierleague' %>">
  <%= render "layouts/menu" %>
  <div class='row'>
    <div class='col-sm-3 hidden-xs'>
      <%= render "layouts/twitter_stream" %>
    </div>
    <div id="stream" class='col-sm-6 col-xs-12'>
      <%= yield %>
    </div>
    <div class='col-sm-3 hidden-xs'>
      <%= render "layouts/standings" %>
      <!-- <div class='col-sm-offset-1' id='tweet-instagram'></div> -->
    </div>
  </div>
</body>
</html>
